{
  // "name": "Python 3 Project (uv)",
  // Use a standard Python image that includes pipx
  // "image": "mcr.microsoft.com/devcontainers/python:3.11",
	"name": "Kafka",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/base:jammy"

	// "build": {
	// 	"dockerfile": "Dockerfile"
	// }

	"dockerComposeFile": "docker-compose.yaml",
	"service": "devcontainer",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [9092, 29092],

  // Run commands after the container is created to set up the environment with uv
  // install uv, create .venv if not exist, activate it, sync packages and activate it
  "postCreateCommand": "pipx install uv && uv venv --allow-existing && uv sync && . .venv/bin/activate",

  
  // "mounts": [
  //   // This line mounts your new host folder into the container's config location
  //   "source=${localWorkspaceFolder}/.devcontainer/.gcloud-creds,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
  // ],
  // Configure VS Code settings and extensions for the container
  "customizations": {
    "vscode": {
      "settings": {
        // Tell VS Code to use the Python interpreter from the venv we just created
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "google.geminicodeassist"
      ]
    }
  }
}