{
  "name": "Python 3 Project (uv)",
  // Use a standard Python image that includes pipx
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // --- This is the key part ---
  // Run commands after the container is created to set up the environment with uv
//   "postCreateCommand": "pipx install uv && uv venv && . .venv/bin/activate && uv pip install -e .",
  "postCreateCommand": "pipx install uv && uv venv --allow-existing && . .venv/bin/activate",

  // Configure VS Code settings and extensions for the container
  "customizations": {
    "vscode": {
      "settings": {
        // Tell VS Code to use the Python interpreter from the venv we just created
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}